  "scripts": {
    "clean": "rm -rf functions",
    "copy": "cp src/config_honban.json functions/config.json && cp package.json functions",
    "build": "yarn clean && babel ./src -d ./functions && yarn copy",
    "serve": "firebase serve --only functions",
    "deploy": "firebase deploy --only functions",
    "start": "babel-node ./src/debug.js",
    "gloconfig": "babel-node ./misc/gloconfig.js",
    "ngrok": "ngrok http 8080"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "firebase-admin": "^8.4.0",
    "firebase-functions": "^3.2.0",
    "github-api": "^3.2.2",
    "ngrok": "^3.2.4",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "firebase-functions-test": "^0.1.6"
  }
